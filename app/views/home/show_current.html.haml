= link_to 'Change Color', 'javascript:void(0)', onclick: 'ChangeColor();'
.block
  - id = @post.xpath(".//div[@id='content']//div[@class='content']/article").first.attributes['id'].value
  %div{id: id}
    %h2
      #{@post.xpath(".//div[@id='content']//h1[@class='title']").text}
    %h3
      Category: #{@post.xpath(".//div[@id='content']//h2[@class='category']/a").text}
    %h4
      #{@post.xpath(".//div[@id='content']//h1[@class='title']").text}
    = image_tag @post.xpath(".//div[@id='content']//figure[@class='field-main-image']/img").first.attributes["src"].value.gsub('/sites/', 'http://'), class: 'center-block'
    %h5
      - @post.xpath(".//div[@class='content']//p").each do |p|
        = raw(p)
    = render 'add_control_buttons', id: id